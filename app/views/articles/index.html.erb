<div class="container">
	<% @articles.each do |article| %>
	<div class="row">
		<h2><%= article.title %></h2>
		<div class="col-md-10">
			<%= article.text %>
		</div>
		<div class="col-md-2">
			<div class="list-group">
				<%= link_to 'Show', article_path(article), {class: "list-group-item"} %>
				<%= link_to 'Edit', edit_article_path(article), {class: "list-group-item"} %>
				<%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "list-group-item list-group-item-danger" %>
			</div>
		</div>
	</div>
	<% end %>
</div>