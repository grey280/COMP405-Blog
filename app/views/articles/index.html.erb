<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1>Articles</h1>
			<table class="table">
				<tr>
					<th>Title</th>
					<th>Text</th>
					<th colspan="3"></th>
				</tr>
				<% @articles.each do |article|%>
				<tr>
					<td><%= article.title %></td>
					<td><%= article.text %></td>
					<td><%= link_to 'Show', article_path(article) %></td>
					<td><%= link_to 'Edit', edit_article_path(article) %></td>
					<td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
