<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
	<%= f.label :commenter %><br>
	<%= f.text_field :commenter, class: "form-control" %>
</p>
<p>
	<%= f.label :body %><br>
	<%= f.text_area :body, class: "form-control" %>
</p>
<p>
	<%= f.submit 'Submit Comment', class: "btn btn-default" %>
</p>
<% end %>